<!DOCTYPE html>
<html>
  <head>
    <title>RailsStarterProject</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css' %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container" style="border-bottom: 2px solid blue; background-color: #F5F5F5">
      <h1 class="h5 my-0 me-md-auto fw-bold" style="padding-top: 10px">Блог</h1>
      <nav class="navbar navbar-light bg-faded">
        <ul class="nav navbar-nav">
          <li class="nav-item active">
            <a class="nav-link" href="<%= posts_path %>">Статьи</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">Контакты</a>
          </li>
        </ul>
        <%= link_to 'Новая статья', new_post_path, class: 'btn btn-outline-primary' %>
      </nav>
    </div>

    <div class="container main">
      <%= yield %>
    </div>
  </body>
</html>
