<article class="post">
  <section class="post-head">
    <h2><%= link_to post.title, post_path(post) %></h2>
    <smal>
      <time><%= post.created_at.to_date.strftime("%d, %B, %Y") %></time>
      <% if user_signed_in? %>
        <%= link_to 'Edit', edit_admin_post_path(post) %>
        <%= link_to 'Destroy', admin_post_path(post), method: :delete, data: { confirm: 'Are you sure?' } %> 
      <% end %>
    </smal>
  </section>

  <section class="post-summary clearfix">
    <%= image_tag post.image.url(:thumb), class: 'img-thumbnail thumb' if post.image? %>
    <%= post.summary %>
  </section>

  <% @post.comments.each do |comment| %>
    <time><%= @post.created_at.to_date.strftime("%d, %B, %Y") %></time>
      <% if user_signed_in? %>
      <%= link_to 'Destroy', post_comment_path(comment), method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end %> 
    <p><strong><%= comment.email %></strong>: <%= comment.body %></p>
    <br>
  <% end %>

  <% if user_signed_in? %>
    <%= form_for([@post, @post.comments.build]) do |comment| %>
      
      <p class="form-group">
        <%= comment.text_field :body, class: 'form-control' %>
      </p>

      <p class="form-group">
        <%= comment.submit 'add comment', class: 'btn btn-primary'%>
      </p>
    <% end %>
  <% end %>
</article>
<br>