<article class="post">
  <section class="post-head">
    <h2><%= link_to post.title, post_path(post) %></h2>
    <smal>
      <time><%= post.created_at.to_date.strftime("%d, %B, %Y") %></time>
      <% if user_signed_in? && (current_user.admin? || current_user.id == post.user_id) %>
        <%= link_to 'Edit', edit_admin_post_path(post) %>
        <%= link_to 'Destroy', admin_post_path(post), method: :delete, data: { confirm: 'Are you sure?' } %> 
      <% end %>
    </smal>
  </section>

  <section class="post-summary clearfix">
    <%= image_tag post.image.url(:thumb), class: 'img-thumbnail thumb' if post.image? %>
    <%= post.summary %>
  </section>
</article>
<br>